@model IEnumerable<Category>

  
   <Partial name="_notification" />
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Category</a>
            </div>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>Category Name</td>
            <td>Display Order</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <td width="50%">@data.Name</td>
                <td width="30%">@data.DisplayOrder</td>
                <td><a asp-action="Edit" asp-controller="Category" class="btn btn-success" asp-route-Id="@data.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Category" class="btn btn-danger" asp-route-Id="@data.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>